{% block content %}
    {#{{ path('eleve_new') }}#}
    <div class="card mb-5">
        <div class="card-header">
            <h3 class="card-title">Liste des élèves de la
                {#<a type="button" href="#eleve_modal" class="btn btn-primary btn-sm pull-right rounded" data-toggle="modal">Ajouter</a>#}
                <a type="button" href="{{ path('add_in_class_type',{'classeType':classeType.id}) }}" class="btn btn-primary btn-sm pull-right rounded" >Ajouter</a>
            </h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>N°</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Sexe</th>
                    <th>Date de naissance</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for eleve in eleves %}
                    {% if eleve.archiver == 0 %}
                    <tr>
                        {#<td><a href="{{ path('eleve_show', { 'id': eleve.id }) }}">{{ eleve.id }}</a></td>#}
                        <td>{{ loop.index }}</td>
                        <td>{{ eleve.nom }}</td>
                        <td>{{ eleve.prenom }}</td>
                        <td>{% if eleve.sexe == 1 %}M {% else %}F{% endif %}</td>
                        <td>{% if eleve.dateNaissance %}{{ eleve.dateNaissance|date('d-m-Y') }}{% endif %}</td>
                        <td>
                            <div class=" row d-column justify-content-center">
                                <div class="">  <a class="dropdown-item modif btn btn-sm btn-warning" href="{{ path('eleve_edit', { 'id': eleve.id }) }}" rel="#"><i class="fa fa-edit text-warning"></i></a></div>
                                <div class="">  <a class="dropdown-item infos btn btn-sm btn-linkedin" href="{{ path('eleve_show', { 'id': eleve.id })}}" rel="#"><i class="fa fa-file-o text-primary"></i></a></div>
                                <div class=""> <a class="dropdown-item btn btn-sm btn-danger "  href="{{ path('eleve_archive', { 'id': eleve.id }) }}"><i class="fa fa-folder text-danger"></i></a></div>

                            </div>
                            {#<div class="dropdown navbar">
                                <button class="btn bg-side text-white btn-sm dropdown-toggle" title="plus d'actions" type="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-plus"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                    <a class="dropdown-item modif" rel="{{ path('eleve_edit', { 'id': eleve.id }) }}" href="#">Modifier</a>
                                    <a class="dropdown-item infos" rel="{{ path('eleve_show', { 'id': eleve.id })}}" href="#">Plus d'infos</a>
                                    <a class="dropdown-item "  href="{{ path('eleve_archive', { 'id': eleve.id }) }}">Archiver</a>
                                </div>
                            </div>#}
                        </td>
                    </tr>
                {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
{% endblock %}
