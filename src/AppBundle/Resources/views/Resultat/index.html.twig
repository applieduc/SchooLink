                                    {% endfor %}
                                    {% endif %}

                                    <td>{{ i['Moy'] }}</td>
                                    <td>{{ i['MoyC'] }}</td>
                                    <td>
                                        {% for b in tab['tab2'] %}
                                        {%  if b['eleve'] == i['eleve'] %}
                                        {{ loop.index }}
                                        {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>{{ i['obs'] }}</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
    {% else %}

        <h2 class="text-muted "  style="margin-top: 50px">Pas de fiche de note disponible pour cette classe</h2>
    {% endif %}
</div>
