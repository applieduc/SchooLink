{% block js %}
    <script>
        $('.f1').click(function () {
            id=$(this).attr('rel');
            $("#"+id).submit();
        });

        $('.m1').click(function () {
            id=$(this).attr('rel');
            $("#"+id).submit();
        });
        $('.p1').click(function () {
            id=$(this).attr('rel');
            $("#"+id).submit();
        });
        $('#type').change(function () {
            var id=$(this).val();
            var form=new FormData();
            form.append('type',id);
            $.ajax({
                type:"POST",
                dataType:"json",
                data:form,
                url:"{{ path('get_matiere_with_typeClasse')}}",
                cache: false,
                contentType:false,
                processData:false,
                success:function (data) {
                    $('#mat').html('');
                    for (var i=0;i<data.mats.length;i++){
                        $('#mat').append('<option value="'+data.mats[i].id+'">'+data.mats[i].libelle+'</option>')
                    }
                }


            });
        });
        $(document).ready(function () {
