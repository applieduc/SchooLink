{% block content %}
    <div class="row">
        <div class="col-3">
            <h5>Option de recherche</h5>
            <div class="card">
                <div class="card-header">
                    Fiche de note
                </div>
                <div class="card-body">
                    <form action="{{ path('fiche_note') }}" method="post">
                        <div class="form-group">
                            <label>Type de classe</label>
                            <select class="form-control" name="tc" id="type">
                                {% for i in tc %}
                                <option value="{{ i.id }}" rel="{{ i.classe.id }}">{{ i.classe.libelle }}  {{ i.libelle }}</option>
                                    {% endfor %}
                            </select>

                        </div>
                        <div class="form-group">
                            <label>Matière</label>
                            <select class="form-control" name="cm" id="mat">
                            {#{% for i in cm %}#}
                                {#<option value="{{ i.matiere.id }}">{{ i.matiere.libelle }}</option>#}
                            {#{% endfor %}#}
                            </select>

                        </div>
                        <div class="form-group">
                            <label>Période</label>
                            <select class="form-control" name="p">
                                {% for i in periode %}
                                <option title="{{ i.dateDebut | date("d-m-Y") }} au  {{ i.dateFin | date("d-m-Y") }}" value="{{ i.id }}">{{ annee.typePeriode }} {{ loop.index }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-actions">
                            <input type="submit" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                   Bulletin
                </div>
                <div class="card-body">
                    <form action="{{ path('bulletin') }}" method="post">
                        <div class="form-group">
                            <label>Type de classe</label>
                            <select class="form-control" name="tc">
                                {% for i in tc %}
                                <option value="{{ i.id }}">{{ i.classe.libelle }}  {{ i.libelle }}</option>
                                    {% endfor %}
                            </select>

                        </div>
                        <div class="form-group">
                            <label>Période</label>
                            <select class="form-control" name="p">
                                {% for i in periode %}
                                    <option title="{{ i.dateDebut | date("d-m-Y") }} au  {{ i.dateFin | date("d-m-Y") }}" value="{{ i.id }}">{{ annee.typePeriode }} {{ loop.index }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-actions">
                            <input type="submit" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-9">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Récentes notes </h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>N°</th>
                            <th>Elève</th>
                            <th>Type</th>
                            <th>Notes</th>
                            <th>Matière</th>
                            <th>Classe</th>
                            <th>Professeur</th>
                            <th>Période</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for i in notes %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ i.eleve.prenom }} {{ i.eleve.nom }}</td>
                                <td>{{ i.type }}</td>
                                <td>{{ i.note }}</td>
                                <td>{{ i.classeMatiereProfesseurAnnee.classematiere.matiere.libelle }}</td>
                                <td>{{ i.classeMatiereProfesseurAnnee.classematiere.classe.libelle }} {{ i.classeMatiereProfesseurAnnee.typeclasse.classe.libelle }}</td>
                                <td>{#  {{ i.classeMatiereProfesseurAnnee.professeur.nom}}#} nom prof</td>
                                <td>{{ i.periode.id }}</td>
                            </tr>
                        {% endfor %}

                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>

    <!-- /.card -->
{% endblock %}

{% block js %}
    <script>
        $('#type').change(function () {
            var id=$(this).val();
            var form=new FormData();
            form.append('type',id);
            $.ajax({
                type:"POST",
                dataType:"json",
                data:form,
                url:"{{ path('get_matiere_with_typeClasse')}}",
                cache: false,
                contentType:false,
                processData:false,
                success:function (data) {
                    $('#mat').html('');
                    for (var i=0;i<data.mats.length;i++){
                        $('#mat').append('<option value="'+data.mats[i].id+'">'+data.mats[i].libelle+'</option>')
                    }
                }


            });
        });
        $(document).ready(function () {
            var id=$('#type').val();
            var form=new FormData();
            form.append('type',id);
            $.ajax({
                type:"POST",
                dataType:"json",
                data:form,
                url:"{{ path('get_matiere_with_typeClasse')}}",
                cache: false,
                contentType:false,
                processData:false,
                success:function (data) {
                    $('#mat').html('');
                    for (var i=0;i<data.mats.length;i++){
                        $('#mat').append('<option value="'+data.mats[i].id+'">'+data.mats[i].lib+'</option>')
                    }
                }


            });
        });
    </script>
{% endblock %}