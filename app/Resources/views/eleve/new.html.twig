    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        Enregistrer un nouvel élève
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <label>Nom</label>
                        {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>Prenoms</label>
                        {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>Sexe</label>
                        {{ form_widget(form.sexe,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>Date de naissance</label>
                        <input type="text" class="form-control date" name="dateNaiss" >
                    </div>

                    <div class="form-group">
                        <label>Classe</label>
                        <select name="classe" id="classe" class="form-control">
                            {% for classe in classes %}
                            <option value="0"></option>
                            <option value="{{ classe.id }}">{{ classe.libelle }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Contact du parent</label>
                        {{ form_widget(form.contact,{'attr':{'class':'form-control'}}) }}
                    </div>
    

                    <input type="submit" value="Créer"  class="btn btn-success"/>
                    {{ form_end(form) }}
                </div>

            </div>
