{% extends 'master.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <span class="">
                        
                            Information personnelle</span>
                        <span class="pull-right" >
                        <a href="{{ path('eleve_index') }}"><i class="fa fa-backward text-dark"></i></a>

                    </span>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(edit_form) }}
                    <div class="form-group">
                        <label>Nom</label>
                        {{ form_widget(edit_form.nom,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>Prenoms</label>
                        {{ form_widget(edit_form.prenom,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>Sexe</label>
                        {{ form_widget(edit_form.sexe,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label>Date de naissance</label>
                        <input type="text" value="{{eleve.dateNaissance|date('m/d/Y') }}" class="form-control date" name="dateNaiss" >
                    </div>
                    <div class="form-group">
                        <label>Classe</label>
                        <select name="classe" id="classe" class="form-control">
                            {% for classe in classes %}
                                <option value="0"></option>
                                <option value="{{ classe.id }}">{{ classe.libelle }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                            <label>Contact du parent</label>
                            {{ form_widget(edit_form.contact,{'attr':{'class':'form-control'}}) }}
                        </div>

                    <input type="submit" value="Sauvegarder"  class="btn btn-success"/>
                    {{ form_end(edit_form) }}
                </div>

            </div>
        </div>

    </div>
{% endblock %}
